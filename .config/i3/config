# vim: filetype=i3

# BASIC
floating_modifier $mod
set $mod Mod4
set $term urxvt
set $browser firefox
set $browser2 surf
set $music mocp
set $pause --no-startup-id mocp -G 
set $next --no-startup-id mocp -f
set $prev --no-startup-id mocp -r
set $lilfor --no-startup-id mocp -k 10
set $bigfor --no-startup-id mocp -k 120
set $lilbak --no-startup-id mocp -k -10
set $bigbak --no-startup-id mocp -k -120
set $beg --no-startup-id mocp -j 0%
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

font pango:monospace 12

# STARTUP
exec --no-startup-id nm-applet
exec --no-startup-id xcompmgr -slt
exec --no-startup-id xset -dpms
exec --no-startup-id xset s off
exec --no-startup-id numlockx
exec --no-startup-id dunst
exec --no-startup-id mocp -S
exec --no-startup-id sh ~/.screenlayout/extern.sh
exec_always --no-startup-id setxkbmap de
exec_always --no-startup-id EDITOR=/usr/bin/vim
exec_always --no-startup-id feh --recursive --randomize --bg-scale ~/multimedia/pictures/wallpapers


# GAPS
hide_edge_borders both
for_window [class="^.*"] border pixel 0 
gaps inner 15 
gaps outer 15
bindsym $mod+Shift+d	gaps inner current set 0; gaps outer current set 0
bindsym $mod+Shift+t	gaps inner current set 15; gaps outer current set 15

bindsym $mod+i		gaps inner current plus 5
bindsym $mod+Shift+i	gaps inner current minus 5
bindsym $mod+o		gaps outer current plus 5
bindsym $mod+Shift+o	gaps outer current minus 5


# BAR
bar {
colors {
	focused_workspace #008080 #008080 #ffffff
	inactive_workspace #000000 #000000 #005050
	active_workspace #000000 #000000 #008080
	urgent_workspace #8B0000 #8B0000 #000000
	}
status_command i3blocks
position top
}

# SYSTEM
bindsym $mod+Return 		exec $term
bindsym $mod+Shift+Return 	exec $term -e qalc
bindsym $mod+Home		split horizontal
bindsym $mod+End		split vertical

bindsym $mod+Escape		kill
bindsym $mod+Shift+x		exec --no-startup-id sh ~/.scripts/powermenu
bindsym $mod+Shift+p		exec --no-startup-id sh ~/.scripts/displayselect
bindsym $mod+x			exec --no-startup-id ~/.config/i3/lock.sh

bindsym $mod+space		focus mode_toggle
bindsym $mod+Shift+space 	floating toggle

bindsym $mod+BackSpace 		exec $term -e htop
bindsym $mod+d		exec dmenu_run

bindsym Print 			exec --no-startup-id scrot
bindsym Shift+Print 		exec --no-startup-id scrot -u


# RESIZE
bindsym $mod+f		fullscreen toggle
bindsym $mod+t		split toggle

bindsym $mod+z		resize grow width 10 px or 10 ppt
bindsym $mod+Shift+z	resize shrink width 10 px or 10ppt
bindsym $mod+u		resize grow height 10 px or 10 ppt
bindsym $mod+Shift+u	resize shrink height 10 px or 10 ppt


# MOVE
bindsym $mod+Shift+Left		move left 30
bindsym $mod+Shift+h		move left
bindsym $mod+Shift+Right	move right 30
bindsym $mod+Shift+l		move right
bindsym $mod+Shift+Up		move up 30
bindsym $mod+Shift+k		move up
bindsym $mod+Shift+Down		move down 30
bindsym $mod+Shift+j		move down


#FOCUS
bindsym $mod+Left	focus left
bindsym $mod+h		focus left
bindsym $mod+Right	focus right
bindsym $mod+l		focus right
bindsym $mod+Up		focus up
bindsym $mod+k		focus up
bindsym $mod+Down	focus down
bindsym $mod+j		focus down


# WEB
bindsym $mod+w		exec $browser ~/.config/startpage/index.html
bindsym $mod+Shift+w	exec $browser2  surf ~/.config/startpage/index.html
bindsym $mod+e		exec $term -e mutt
bindsym $mod+Shift+n	exec $term -e newsboat


# OFFICE
bindsym $mod+r 		exec $term -e ranger
bindsym $mod+Shift+r	exec $term -e sudo ranger
bindsym $mod+c		exec $term -e calcurse
bindsym $mod+v		exec $term -e vim


# VOLUME
bindsym $mod+a			exec $term -e alsamixer
bindsym $mod+Shift+a		exec pavucontrol
# for pamixer
#bindsym $mod+Shift+m		exec --no-startup-id pamixer -t
#bindsym $mod+plus		exec --no-startup-id pamixer -i 1
#bindsym $mod+Shift+plus	exec --no-startup-id pamixer -i 5
#bindsym $mod+minus 		exec --no-startup-id pamixer -d 1
#bindsym $mod+Shift+minus	exec --no-startup-id pamixer -d 5

#for amixer
bindsym $mod+Shift+m		exec --no-startup-id sh ~/.scripts/amixer_mute
bindsym $mod+plus		exec --no-startup-id amixer set Master -q 1%+
bindsym $mod+Shift+plus		exec --no-startup-id amixer set Master -q 5%+
bindsym $mod+minus		exec --no-startup-id amixer set Master -q 1%-
bindsym $mod+Shift+minus	exec --no-startup-id amixer set Master -q 5%-


# MUSIC
bindsym $mod+m 		exec $term -e $music
bindsym $mod+p		exec $pause
bindsym $mod+b		exec $prev
bindsym $mod+n		exec $next
#bindsym $mod+o		exec --no-startup-id $beg


	
